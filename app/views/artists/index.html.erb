<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Artist identity</th>
      <th>Bio</th>
      <th>Location</th>
      <th>Website</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.First_Name %></td>
        <td><%= artist.Surname %></td>
        <td><%= artist.Artist_Identity %></td>
        <td><%= artist.BIO %></td>
        <td><%= artist.Location %></td>
        <td><%= artist.Website %></td>
        <td><%= artist.Facebook %></td>
        <td><%= artist.Twitter %></td>
        <td><%= artist.user %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

