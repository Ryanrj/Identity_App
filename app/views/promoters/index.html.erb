<p id="notice"><%= notice %></p>

<h1>Promoters</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Company name</th>
      <th>Bio</th>
      <th>Location</th>
      <th>Website</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promoters.each do |promoter| %>
      <tr>
        <td><%= promoter.First_Name %></td>
        <td><%= promoter.Surname %></td>
        <td><%= promoter.Company_Name %></td>
        <td><%= promoter.BIO %></td>
        <td><%= promoter.Location %></td>
        <td><%= promoter.Website %></td>
        <td><%= promoter.Facebook %></td>
        <td><%= promoter.Twitter %></td>
        <td><%= link_to 'Show', promoter %></td>
        <td><%= link_to 'Edit', edit_promoter_path(promoter) %></td>
        <td><%= link_to 'Destroy', promoter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Promoter', new_promoter_path %>
